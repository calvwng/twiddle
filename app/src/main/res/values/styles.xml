<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="NavigationDrawerTheme"
           parent="MaterialNavigationDrawerTheme.Light.DarkActionBar.TranslucentKitKatStatusBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="rippleBackport">true</item>
        <item name="singleAccount">true</item>
    </style>

    <style name="NoWindowActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
